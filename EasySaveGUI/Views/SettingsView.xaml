<UserControl x:Class="EasySaveGUI.Views.SettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:EasySaveGUI.Views"
      xmlns:viewModels="clr-namespace:EasySaveGUI.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <viewModels:SettingsViewModel />
    </UserControl.DataContext>

    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30" FontWeight="Bold" Text="{DynamicResource TitleSettings}" Foreground="{DynamicResource Text}"/>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,100,0,0" Text="{DynamicResource LanguageTitleCaseSettings}" Foreground="{DynamicResource Text}"/>
        <!-- ComboBox pour la selection de la langue -->
        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,100,0,0" 
                  ItemsSource="{Binding AvailableLanguages}" 
                  SelectedItem="{Binding Language, Mode=TwoWay}" Width="200"/>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,150,0,0" Text="{DynamicResource LogTitleCaseSettings}" Foreground="{DynamicResource Text}"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,150,0,0">
            <TextBox Text="{Binding LogPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
            <Button Content="..." Width="30" Command="{Binding BrowseLogPathCommand}" />
        </StackPanel>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,200,0,0" Text="{DynamicResource StateTitleCaseSettings}" Foreground="{DynamicResource Text}"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,200,0,0">
            <TextBox Text="{Binding StatePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
            <Button Content="..." Width="30" Command="{Binding BrowseStatePathCommand}" />
        </StackPanel>


        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,250,0,0" Text="{DynamicResource LogTypeTitleCaseSettings}" Foreground="{DynamicResource Text}"/>
        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,250,0,0"
          ItemsSource="{Binding AvailableLogTypes}"
          SelectedItem="{Binding LogType, Mode=TwoWay}" Width="200"/>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,300,0,0" Text="{DynamicResource ThemeTitleCaseSettings}" Foreground="{DynamicResource Text}"/>
        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,300,0,0"
          ItemsSource="{Binding AvailableTheme}"
          SelectedItem="{Binding Theme, Mode=TwoWay}" Width="200"/>



        <!-- Bouton Save -->
        <Button Content="{DynamicResource SaveButtonSettings}" 
                Background="{DynamicResource List}"
                BorderBrush="{DynamicResource Card}"
                Foreground="{DynamicResource Text}"
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Margin="0,0,0,20" 
                Width="100"
                Command="{Binding SaveCommand}" />
    </Grid>
</UserControl>
