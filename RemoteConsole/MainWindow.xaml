<Window x:Class="RemoteConsole.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Remote Console" Height="300" Width="400">
    <Grid>
        <TextBox Name="StatusBox" Width="350" Height="150" IsReadOnly="True" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button Content="Pause" Width="100" Height="30" Click="Pause_Click" HorizontalAlignment="Left" Margin="50,180,0,0"/>
        <Button Content="Reprendre" Width="100" Height="30" Click="Resume_Click" HorizontalAlignment="Right" Margin="0,180,50,0"/>
    </Grid>
</Window>